@model dotnet_project.Models.Products

@{
    ViewData["Title"] = "GetProduct";
    Layout = "~/Views/Shared/_LayoutWithoutHeader.cshtml";
}

<h1>GetProduct</h1>

<div>
    <h4>Products</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
    </dl>
</div>
<div>
    @if (ViewBag.userType == 2)
    {
        <a asp-controller="Product" asp-action="@Model.Id/UpdateProduct" class="btn btn-success">Update</a>
    }
    <a asp-action="Index" class="btn btn-info">Back to Products</a>
</div>
