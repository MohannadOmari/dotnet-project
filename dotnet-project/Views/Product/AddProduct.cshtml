@model Products

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-black">Add Product</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="ProductName">Name</label>
            <input asp-for="ProductName" class="form-control"/>
             <span asp-validation-for="ProductName" class="text-danger"></span> 
        </div>
        <div class="mb-3">
            <label asp-for="Quantity">Quantity</label>
            <input asp-for="Quantity" class="form-control" />
             <span asp-validation-for="Quantity" class="text-danger"></span> 
        </div>
        <div class="mb-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span> 
        </div>
        <div class="mb-3">
            <label asp-for="ProductDescription">Description</label>
            <textarea asp-for="ProductDescription" class="form-control"></textarea>
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success" style="width:150px">Add Product</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-danger" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}